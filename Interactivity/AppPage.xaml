<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
	xmlns:chart="clr-namespace:MindFusion.Charting.Controls;assembly=MindFusion.Charting"
	x:Class="IOSSamples.AppPage">
	<ContentPage.Content>
		<StackLayout Spacing="5" Padding="10">
			<Label Text="Interactivity Sample" />
			<Label Text="Touch and drag to pan the chart. Stretching the view zooms the selected area of the chart. The legend can be moved too." FontSize="12" />

			<chart:BarChart x:Name="barChart" WidthRequest="300" HeightRequest="300" />

			<chart:PieChart x:Name="pieChart" WidthRequest="300" HeightRequest="300" />

		</StackLayout>
	</ContentPage.Content>
</ContentPage>

<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
	xmlns:chart="clr-namespace:MindFusion.Charting.Controls;assembly=MindFusion.Charting"
	x:Class="IOSSamples.AppPage">
	<ContentPage.Content>
		<StackLayout Spacing="5" Padding="10, 30, 10, 0">
			<Label Text="Group Labels Sample" />
			<Label Text="This sample shows how to display labels for bar groups by using the AnnotationRenderer class." FontSize="12" />

			<chart:BarChart x:Name="barChart" WidthRequest="300" HeightRequest="300" />

		</StackLayout>
	</ContentPage.Content>
</ContentPage>
